{
  "plugins": ["stylelint-prettier"],
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "block-no-empty": true,
    "color-no-invalid-hex": true,
    "no-duplicate-selectors": true,
    "max-nesting-depth": [4, { "ignore": ["pseudo-classes"] }],
    "selector-class-pattern": null,
    "prettier/prettier": [
      true,
      {
        "endOfLine": "auto",
        "singleQuote": true
      }
    ]
  }
}
